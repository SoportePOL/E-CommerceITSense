@model E_Commerce.Model.Models.ECommerce.Products.Item

@{
    ViewBag.Title = "Index";
}

<h2>@Model.title</h2>

<div class="card">
    <img class="img-thumbnail" src="@Model.pictures.First().secure_url" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">Card title</h5>
        <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
        <p class="card-text"><small class="text-muted">@Model.date_created</small></p>
    </div>
</div>