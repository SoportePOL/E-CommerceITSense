@model E_Commerce.Model.Models.ECommerce.Products.Item

@{
    ViewBag.Title = "Index";
}

<h2>@Model.title</h2>

<div class="card">
    <div class="card-img-top">
        <div class="text-center">
            <img class="img-responsive" src="@Model.pictures.First().secure_url" alt="Card image cap">
        </div>
    </div>
    <hr />
    <div class="card-body">
        <h5 class="card-title">@Model.title</h5>
        <p class="card-text">@Html.Raw(Model.description.plain_text)</p>
        <p class="card-text"><small class="text-muted">@Model.date_created</small></p>
    </div>
</div>